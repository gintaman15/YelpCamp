<% layout('layouts/boilerplate') %>


    <div id="cluster-map"></div>

    <h1>All Campgrounds</h1>

    <% for( let campground of campgrounds ) { %>

        <div class="card mb-2">
            <div class="row">
                <% if (campground.images.length) { %>
                    <img src="<%= campground.images[0].url %>" class="card-img-left col-md-4" alt="...">
                    <% } else {%>
                        <img src="/Images/upload/Tent-icon.png" class="card-img-left col-md-4" alt="...">
                        <% } %>

                            <div class="card-body col-md-8">
                                <h5 class="card-title">
                                    <%= campground.title %>
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted ">
                                    <%= campground.location %>
                                </h6>
                                <p class="card-text">
                                    <%= campground.description %>
                                </p>
                                <div class="btn btn-dark text-light">
                                    <a href="/campgrounds/<%= campground._id %> "
                                        style="color: inherit; text-decoration: none;">Show</a>
                                </div>
                                <!-- <div class="btn btn-dark text-light">
                        <a href="/campgrounds/<%= campground._id%>/edit"
                            style="color: inherit; text-decoration: none;">Edit</a>
                    </div> -->
                            </div>
            </div>
        </div>

        <% } %>

            <script>
                const mapToken = '<%- process.env.MAPBOX_TOKEN%>';
                const campgrounds = { features: <%- JSON.stringify(campgrounds) %>}; 
            </script>
            <script src="/javascripts/clusterMap.js"></script>